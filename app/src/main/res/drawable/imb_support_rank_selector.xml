<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:centerColor="@color/colorPress" android:endColor="@color/colorPress" android:startColor="@color/colorPress" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <gradient android:centerColor="@android:color/white" android:endColor="@android:color/white" android:startColor="@android:color/white" />
            <corners android:radius="4dp" />
        </shape>
    </item>
</selector>
