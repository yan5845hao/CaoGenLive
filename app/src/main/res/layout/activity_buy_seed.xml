            android:gravity="center"
            android:text="@string/seed_rmb_100" />

        <LinearLayout
            android:id="@+id/ll_buy_seed_line_3"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/tv_seed_word_3"
            android:layout_marginLeft="20dp"
