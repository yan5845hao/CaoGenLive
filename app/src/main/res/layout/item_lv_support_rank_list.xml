<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="74dp">
    <!--用户排名，NO.1-->
    <TextView
        android:id="@+id/tv_item_lv_support_rank_list_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="24dp"
        android:text="NO.4"
        android:textSize="10sp" />
    <!--用户头像-->
    <com.ylsna.view.CircleImageView
        android:id="@+id/im_item_support_rank_list"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="22dp"
        android:layout_toRightOf="@+id/tv_item_lv_support_rank_list_num"
        android:src="@mipmap/head" />
    <!--用户昵称-->
    <TextView
        android:id="@+id/tv_item_lv_support_rank_list_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="18dp"
        android:layout_toRightOf="@+id/im_item_support_rank_list"
        android:text="用户昵称"
        android:textSize="14sp"
        android:textStyle="bold" />
    <!--用户消费数量-->
    <RelativeLayout
        android:id="@+id/rl_item_lv_support_rank_list_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_item_lv_support_rank_list_username"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/im_item_support_rank_list">

        <TextView
            android:id="@+id/tv_support_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消费"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_item_support_rank_list_money_no3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_support_no"
            android:text="88.8"
            android:textColor="@color/colorPrimary"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_item_support_rank_list_money_no3"
            android:text="元"
            android:textSize="10sp" />
    </RelativeLayout>

</RelativeLayout>